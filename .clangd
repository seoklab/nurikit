# Require clangd v15
CompileFlags:
  Add:
    - -xc++
    - -Weverything
    - -Wno-c++98-compat
    - -Wno-c++98-compat-pedantic
    - -Wno-c++98-c++11-compat-binary-literal
    - -Wno-c++03-compat
    - -Wno-exit-time-destructors
    - -Wno-global-constructors
    - -Wno-thread-safety-negative
Style:
  FullyQualifiedNamespaces: true
Diagnostics:
  UnusedIncludes: Strict
Completion:
  AllScopes: true
InlayHints:
  Enabled: No
Hover:
  ShowAKA: Yes
